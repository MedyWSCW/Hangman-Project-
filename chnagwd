import random

themes = {
    "Superheroes/Villains": ["Spiderman", "Deadpool", "Riddler", "Thanos", "Batman"],
    "Animals": ["Elephant", "Giraffe", "Lion", "Gorilla", "Tiger"],
    "Dinosaurs": ["Velociraptor", "Triceratops", "Spinosaurus", "Tyrannosaurus"]
}

def choose_word():
    theme = random.choice(list(themes.keys()))
    word = random.choice(themes[theme]).upper()
    return theme, word

def check_win_loss(word_completion, tries):
    if "_" not in word_completion:
        return "win"
    elif tries <= 0:
        return "loss"
    return "continue"

def play(word):
    word_completion = "_" * len(word)
    guessed = False
    guessed_letters = []
    guessed_words = []
    tries = 6

    print("Let's play Hangman!")
    print("Word: " + word_completion)
    print("\n")

    while not guessed and tries > 0:
        guess = input("Please guess a letter or word: ").upper()
        if len(guess) == 1 and guess.isalpha():
            if guess in guessed_letters:
                print("You already guessed the letter", guess)
            elif guess not in word:
                print(guess, "is not in the word.")
                tries -= 1
                guessed_letters.append(guess)
            else:
                print("Good job,", guess, "is in the word!")
                guessed_letters.append(guess)
                word_as_list = list(word_completion)
                indices = [i for i, letter in enumerate(word) if letter == guess]
                for index in indices:
                    word_as_list[index] = guess
                word_completion = "".join(word_as_list)
        elif len(guess) == len(word) and guess.isalpha():
            if guess in guessed_words:
                print("You already guessed the word", guess)
            elif guess != word:
                print(guess, "is not the word.")
                tries -= 1
                guessed_words.append(guess)
            else:
                guessed = True
                word_completion = word
        else:
            print("Not a valid guess.")
        
        print("Word: " + word_completion)
        print("Tries remaining: " + str(tries))
        print("\n")

        game_status = check_win_loss(word_completion, tries)
        if game_status == "win":
            print("Congrats, you guessed the word! You win!")
            guessed = True
        elif game_status == "loss":
            print("Sorry, you ran out of tries. The word was " + word + ". Maybe next time!")
            guessed = True

def main():
    theme, word = choose_word()
    
    print("Hello, welcome to our Hangman game.")
    answer = input("Do you know how to play Hangman? (yes/no): ").strip().lower()
    
    if answer == "yes":
        print("Great, our Hangman game will have different themes such as animals, villains, superheroes, and dinosaurs.")
        input("Press enter to start.")
    elif answer == "no":
        print("The aim of this game is to guess a random word before you run out of tries.")
        print("Our Hangman game will have different themes such as animals, villains, superheroes, and dinosaurs.")
        input("Press enter to start.")
    else:
        print("That isn't a valid answer. Let's proceed anyway.")
        input("Press enter to start.")

    print(f"The chosen theme is {theme}.")
    print("The game will now start.")
    play(word)

    while input("Play Again? (Y/N): ").upper() == "Y":
        theme, word = choose_word()
        print(f"The chosen theme is {theme}.")
        play(word)

if __name__ == "__main__":
    main()

